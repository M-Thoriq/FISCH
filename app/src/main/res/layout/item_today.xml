<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_today"
    android:clickable="true"
    android:focusable="true"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="157dp"
    android:layout_marginEnd="12dp"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/row_wallet_redeem_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"

        android:src="@drawable/bg2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_ikan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tv_location_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/boldtext"
                android:includeFontPadding="false"
                android:textSize="12sp"
                tools:text="Tanjung Emas" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_harga_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:fontFamily="@font/boldtext"
            android:textSize="16sp"
            tools:text="Rp. 75.000.000" />

        <TextView
            android:id="@+id/tv_berat_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boldtext"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="5kg" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>